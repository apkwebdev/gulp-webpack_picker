{
  "extends": ["stylelint-config-standard", "stylelint-config-recess-order" ],
  "rules": {
    "number-leading-zero": null,
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "include",
        "mixin",
        "function",
        "if",
        "else",
        "return",
        "each"
      ]
    }],
    "at-rule-empty-line-before": [ "never", {
      "ignoreAtRules": [
        "mixin",
        "function",
        "if",
        "else",
        "return",
        "each",
        "media",
        "keyframes"
      ] 
    }],
    "declaration-empty-line-before": [ "never", {
      "ignore": [
        "after-declaration"
      ]
    }]
  }
}
